{
  "name": "mern-testing-project",
  "version": "1.0.0",
  "description": "MERN stack application with comprehensive testing",
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "test": "jest --coverage",
    "test:unit": "jest --selectProjects=client server --testPathPattern='unit'",
    "test:integration": "jest --selectProjects=server --testPathPattern='integration'",
    "test:e2e": "cypress run",
    "test:watch": "jest --watch",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev"
  },
  "keywords": [
    "mern",
    "testing",
    "jest",
    "cypress"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0"
  }
}
